<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTimer.UserControls.StepperControl">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Button x:Name="MinusButton" Text="-" Clicked="MinusButton_OnClicked" VerticalOptions="Center" HorizontalOptions="Center"/>
    <Button x:Name="PlusButton" Grid.Column="1" Text="+" Clicked="PlusButton_OnClicked" VerticalOptions="Center" HorizontalOptions="Center"/>
  </Grid>
</ContentView>